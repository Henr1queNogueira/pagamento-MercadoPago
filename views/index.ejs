<%- include('partials/header'); -%>
    <body>
        <%- include('partials/navbar'); -%>
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/img/principal.png" class="d-block w-100 img-carrossel" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-xl-left font-weight-bolder" style="-webkit-text-stroke: 0.25px; -webkit-text-stroke-color: lightblue;">Conheça nosso projeto e faça sua doação</h5>
                    <p class="text-left"><a class="btn btn-lg btn-primary" href="/doar" role="button">Clique aqui</a></p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/img/img2.png" class="d-block w-100 img-carrossel" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <p class="text-center"><a class="btn btn-lg btn-primary" href="/doar" role="button">Faça sua doação aqui</a></p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/img/img3.png" class="d-block w-100 img-carrossel" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <p class="text-right"><a class="btn btn-lg btn-primary" href="/doar" role="button">Colabore</a></p>
                </div>
            </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Próximo</span>
            </button>
        </div>
    </body>
<%- include('partials/footer'); -%>