<%- include('../partials/headAdm'); %>
<body>
  <div class="d-flex">
    <%- include('../partials/sidebarAdm'); %>
    <div class="w-100">
      <div id="content">
        <section class="p-5">
          <div class="container">
            <div class="row">
              <div class="col-md-12 mb-3">
                <h3 class="text-center">Lista de Usuários<hr></h3>
                <br>
                <a href="/adm/usuarios/criar" class="btn btn-primary">Cadastrar Usuário</a>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                  <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                      <th scope="col">Id</th>
                      <th scope="col">Nome</th>
                      <th scope="col">E-mail</th>
                      <th scope="col">Ações</th>
                    </thead>
                    <tbody>
                      <% usuarios.forEach(usuarios => { %>
                        <tr>
                          <th scope="row"><%= usuarios.id %></th>
                          <td><%= usuarios.nome %></td>
                          <td><%= usuarios.email %></td>
                          <td>
                            <a href="/admin/usuarios/editar/<%= usuarios.id %>" class="btn btn-warning">Editar</a>
                            <form method="POST" action="/usuarios/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                              <input type="hidden" name="id" value="<%= usuarios.id %>">
                              <button class="btn btn-danger">Excluir</button>
                            </form>      
                          </td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                </div>      
              </div>
            </div>
          </section>
          <%- include('../partials/footerAdm'); %>
        </div>
      </div>
    </div>
  </body>