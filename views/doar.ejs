<%- include('partials/head'); -%>
<body>
  <%- include('partials/navbar'); -%>
  <div class="container bg-light shadow"> 
    <div class="col-md-12 order-md-1 p-4">
      <form method="POST" action="/doar">
        <div class="row">
          <h2 class="text-center color-special display-5 m-2 p-3">Doação</h2>
          <label class="col-sm-12 col-form-label"><br>DADOS PESSOAIS<hr></label>
          <div class="col-md-6 mb-3">
            <label>Nome<span class="text-danger"> *</span></label>
            <input type="text" class="form-control form-control-sm" name="nome" id="nome" data-tipo="nome" required>
          </div>
          <div class="col-md-3 mb-3">
            <label>CPF</label>
            <input type="text" minlength="11" class="form-control form-control-sm" id="cpf" name="cpf" data-tipo="cpf" placeholder="Pessoa Física, informe o CPF">
          </div>
          <div class="col-md-3 mb-3">
            <label>CNPJ</label>
            <input type="text" class="form-control form-control-sm" id="cnpj" name="cnpj" data-tipo="cnpj" placeholder="Pessoa Júrica, informe o CNPJ">
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 mb-6">
            <label>Endereço<span class="text-danger"> *</span></label>
            <input type="text" class="form-control form-control-sm" id="endereco" name="endereco" data-tipo="endereco" required>
          </div>
          <div class="col-md-4 mb-3">
            <label>E-mail <span class="text-danger"> *</span></label>
            <input type="email" class="form-control form-control-sm" id="email" name="email" data-tipo="email" required>
          </div>
          <div class="col-md-2 mb-3">
            <label>Contato <span class="text-danger"> *</span></label>
            <input type="text" class="form-control form-control-sm" id="contato" name="contato" data-tipo="contato" required>
          </div>
        </div>
        <div class="row">
          <label class="col-sm-12">SUA DOAÇÃO<hr></label>
          <div class="col-md-12 mb-6">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="valor" id="valor1" value="10">
                <label class="form-check-label"> Doação de R$ 10,00
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="valor" id="valor2" value="20">
                <label class="form-check-label">Doação de R$ 20,00
              </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="valor" id="valor3" value="30">
                  <label class="form-check-label">Doação de R$ 30,00
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="valor" id="valor4" value="50">
                  <label class="form-check-label">Doação de R$ 50,00
                </div>
                <small class="text-muted">Outro valor?</small>
                <div class="col-md-6 input-group input-group-sm">
                  <span class="input-group-text">R$</span>
                  <input class="form-control form-control-sm" type="text" name="valor" id="valor5" data-tipo="outroValor" value="" placeholder="100,00">
                </div>      
          </div>   
        </div>
        <br>
        <div class="row">
          <div class="d-grid gap-2">
            <button class="btn btn-success" type="submit">DOAR</button>
          </div>   
        </div>     
      </form>
    </div>   
  </div>
</body>
<%- include('partials/footer'); -%>

          