<%- include('partials/head'); -%>
<body>
  <%- include('partials/navbar'); -%>
  <div class="container bg-light shadow"> 
    <div class="col-md-12 order-md-1 p-4">
      <form method="POST" action="/doar">
        <div class="row">
          <div class="col-md-12 mb-3">
            <% if(typeof erros != 'undefined'){ %>
              <% erros.forEach(function(error) { %>
                  <div class="alert alert-danger" role="alert">
                      <%= error.msg %>
                  </div>
              <% }); %>
            <% } %>
          </div>
        </div>
        <div class="row">
          <h2 class="text-center color-special display-5 m-2 p-3">Doação</h2>
          <label class="col-sm-12 col-form-label"><br>DADOS PESSOAIS<hr></label>
          <div class="col-md-6 mb-3">
            <label>Nome<span class="text-danger"> *</span></label>
            <input type="text" class="form-control form-control-sm" name="nome" id="nome" data-tipo="nome" placeholder="Peridot da Silva" required>
          </div>
          <div class="col-md-3 mb-3">
            <label>CPF</label>
            <input type="text" minlength="11" class="form-control form-control-sm" id="cpf" name="cpf" data-tipo="cpf" placeholder="Pessoa Física, informe o CPF">
          </div>
          <div class="col-md-3 mb-3">
            <label>CNPJ</label>
            <input type="text" class="form-control form-control-sm" id="cnpj" name="cnpj" data-tipo="cnpj" placeholder="Pessoa Júrica, informe o CNPJ">
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 mb-6">
            <label>Endereço<span class="text-danger"> *</span></label>
            <input type="text" class="form-control form-control-sm" id="endereco" name="endereco" data-tipo="endereco" placeholder="Rua Galdino Moreira, 3675 bairro: Cidade Nova" required>
          </div>
          <div class="col-md-4 mb-3">
            <label>E-mail <span class="text-danger"> *</span></label>
            <input type="email" class="form-control form-control-sm" id="email" name="email" data-tipo="email" placeholder="exemplo@email.com" required>
          </div>
          <div class="col-md-2 mb-3">
            <label>Contato <span class="text-danger"> *</span></label>
            <input type="text" class="form-control form-control-sm" id="contato" name="contato" data-tipo="contato" placeholder="(11) 1111-3322" required>
          </div>
        </div>
        <div class="row">
          <label class="col-sm-12">SUA DOAÇÃO<hr></label>
          <div class="col-md-12 mb-3">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="valor" id="valor1" value="10" onclick="teste(0);">
                <label class="form-check-label" for="valor1"> Doação de R$ 10,00
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="valor" id="valor2" value="20" onclick="teste(0);">
                <label class="form-check-label" for="valor2">Doação de R$ 20,00
              </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="valor" id="valor3" value="30" onclick="teste(0);">
                  <label class="form-check-label"for="valor3">Doação de R$ 30,00
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="valor" id="valor4" value="50" onclick="teste(0);">
                  <label class="form-check-label"for="valor4">Doação de R$ 50,00
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="valor" id="valor5" value="0" onclick="teste(1);">
                  <label for="valor5"><input class="form-control form-control-sm" type="number" step='0.01' min='50' name="outroValor" id="outroValor" data-tipo="outroValor" value="" placeholder="Outro Valor?" onclick="teste(1);">      
                </div>      
          </div>   
        </div>
        <br>
        <div class="row">
          <div class="d-grid gap-2">
            <button class="btn btn-success" type="submit">DOAR</button>
          </div>
        </div>     
      </form>
    </div>   
  </div>
</body>
<%- include('partials/footer'); -%>


          